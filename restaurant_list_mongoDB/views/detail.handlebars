<h1 class="mb-1 restaurant-show-title text-center mt-2">{{list.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-3"></i>
          類別：
        </span>
        {{list.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-3"></i>
          地址：
        </span>
        {{list.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-3"></i>
          電話：
        </span>
        {{list.phone}}
      </p>

      <p class="mb-5">
        <span class="text-secondary">
          <i class="far fa-comment pr-2"></i>
          餐廳描述：
        </span>
        {{list.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{list.image}}" alt="{{list.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>